<h2>Styled Outfits</h2>
<br>  <br>
<div class="container" id="outfits">
  <div class="row">
    <% if @outfits.any? %>
    <% @outfits.each do |outfit| %>
    <div class="col-lg-6 ">
      <div class="thumbnail">
        <br>  <br>
        <div class="caption"><h4>
         <% env_data = outfit.env_data %>
         <%= env_data.date.to_formatted_s(:long) %> || <%= env_data.location %>, <%= env_data.weather_state %> ||  <%= env_data.weather_temp %> &#8457  <%= link_to "Remove", outfits_delete_path(outfit), method: :delete, class: "btn btn-default" %></h4> </div>
         <br>
         <% if outfit.top_url != "" %>
          <img src="<%= outfit.top_url %>" alt="<%= outfit.top %>">
         <% end %>
         <% if outfit.dress_url != "" %>
          <img src="<%= outfit.dress_url %>" alt="<%= outfit.dress %>">
         <% end %>
         <% if outfit.bottom_url != "" %>
          <img src="<%= outfit.bottom_url %>" alt="<%= outfit.bottom %>">
         <% end %>
         <% if outfit.shoe_url != "" %>
          <img src="<%= outfit.shoe_url %>" alt="<%= outfit.shoe %>">
         <% end  %>
         <% if outfit.access_1_url != "" %>
          <img src="<%= outfit.access_1_url %>" alt="<%= outfit.access_1 %>">
         <% end %>
         <% if outfit.access_2_url != "" %>
          <img src="<%= outfit.access_2_url %>" alt="<%= outfit.access_2 %>">
         <% end %>
       </div>
 
        <!-- MODAL STARTS -->
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel"><%= env_data.date %></h4>
                </div>
                <div class="modal-body">
                 <% if outfit.top_url != "" %>
                  <span class="modalTop" data-topid="<%= outfit.top %>"></span>
                 <% end %>
                 <% if outfit.dress_url != "" %>
                  <span class="modalDress" data-dressid="<%= outfit.dress %>"></span>
                 <% end %>
                 <% if outfit.bottom_url != "" %>
                  <span class="modalBottom" data-bottomid="<%= outfit.bottom %>"></span>
                 <% end %>
                 <% if outfit.shoe_url != "" %>
                  <span class="modalShoe" data-shoeid="<%= outfit.shoe %>"></span>
                 <% end  %>
                 <% if outfit.access_1_url != "" %>
                  <span class="modalAccess1" data-access_1id="<%= outfit.access_1 %>"></span>
                 <% end %>
                 <% if outfit.access_2_url != "" %>
                  <span class="modalAccess2" data-access_2id="<%= outfit.access_2 %>"></span>
                 <% end %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>

        <!-- MODAL Ends -->         




     </div>
     <% end %>
     <% end %>
   </div>
 </div>

