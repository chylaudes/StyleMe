<h2>Styled Outfits</h2>
<br>  <br>
<div class="container" id="outfits">
  <div class="row">
    <% if @outfits.any? %>
    <% @outfits.each do |outfit| %>
    <div class="col-lg-6 ">
      <div class="thumbnail">
        <br>  <br>
        <div class="caption"><h4>
         <% env_data = outfit.env_data %>
         <%= env_data.date.to_formatted_s(:long) %> || <%= env_data.location %>, <%= env_data.weather_state %> ||  <%= env_data.weather_temp %> &#8457  <%= link_to "Remove", outfits_delete_path(outfit), method: :delete, class: "btn btn-default" %></h4> </div>
         <br>
         <% if outfit.top_url != "" %>
          <img src="<%= outfit.top_url %>" alt="<%= outfit.top %>">
         <% end %>
         <% if outfit.dress_url != "" %>
          <img src="<%= outfit.dress_url %>" alt="<%= outfit.dress %>">
         <% end %>
         <% if outfit.bottom_url != "" %>
          <img src="<%= outfit.bottom_url %>" alt="<%= outfit.bottom %>">
         <% end %>
         <% if outfit.shoe_url != "" %>
          <img src="<%= outfit.shoe_url %>" alt="<%= outfit.shoe %>">
         <% end  %>
         <% if outfit.access_1_url != "" %>
          <img src="<%= outfit.access_1_url %>" alt="<%= outfit.access_1 %>">
         <% end %>
         <% if outfit.access_2_url != "" %>
          <img src="<%= outfit.access_2_url %>" alt="<%= outfit.access_2 %>">
         <% end %>
        <div>
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">
            Show Info
          </button>
        </div>

       </div>

        <!-- MODAL STARTS -->
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel"><%= env_data.date.to_formatted_s(:long) %> || <%= env_data.location %>, <%= env_data.weather_state %> ||  <%= env_data.weather_temp %> &#8457 </h4>
                </div>
                <div class="modal-body">
                  <div class="container-fluid">
                    <div class="row">
                      <div class="col-md-6">
                       <% if outfit.top_url != "" %>
                        <div class="modalTop" data-topid="<%= outfit.top %>"></div>
                        <!-- <span class="modalTop" data-topid="<%= outfit.top %>"></span> -->
                       <% end %>
                       <% if outfit.dress_url != "" %>
                        <div class="modalDress" data-dressid="<%= outfit.dress %>"></div>
                        <!-- <span class="modalDress" data-dressid="<%= outfit.dress %>"></span> -->
                       <% end %>
                      </div>
                      <div class="col-md-6">
                       <% if outfit.bottom_url != "" %>
                        <div class="modalBottom" data-bottomid="<%= outfit.bottom %>"></div>
                        <!-- <span class="modalBottom" data-bottomid="<%= outfit.bottom %>"></span> -->
                       <% end %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                       <% if outfit.shoe_url != "" %>
                        <div class="modalShoe" data-shoeid="<%= outfit.shoe %>"></div>
                        <!-- <span class="modalShoe" data-shoeid="<%= outfit.shoe %>"></span> -->
                       <% end  %>
                      </div>
                      <div class="col-md-4">
                       <% if outfit.access_1_url != "" %>
                        <div class="modalAccess1" data-access_1id="<%= outfit.access_1 %>"></div>
                        <!-- <span class="modalAccess1" data-access_1id="<%= outfit.access_1 %>"></span> -->
                       <% end %>
                      </div>
                      <% if outfit.access_2_url != "" %>
                      <div class="col-md-4">

                        <div class="modalAccess2" data-access_2id="<%= outfit.access_2 %>"></div>
                        <!-- <span class="modalAccess2" data-access_2id="<%= outfit.access_2 %>"></span> -->
                      </div>
                       <% end %>
                    </div>
                  </div> <!--end of container fluid-->
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default close" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        <!-- MODAL Ends -->



     </div>
     <% end %>
     <% end %>
   </div>
 </div>