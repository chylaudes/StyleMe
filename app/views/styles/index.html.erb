<h3>Hello <span style="color:blue;"><%= @user.first_name %>,</span> Here is what we suggest for you today!</h3><br>

<%= form_for @user, url: styles_path(@user) do |f| %>

<!-- url: [@user, @whatever] -->

<div class="row" id="weather">
  <!-- weather info -->
  <div id="weather">
    <div class="col-md-3 col-lg-3 lead" id="location"><%= @user.location %></div> 
    <div class="col-md-2 col-lg-1 col-sm-3">
      <div id="wIcon"></div>
    </div> 
    <div class="col-md-3 col-lg-3 col-sm-4">
      <div style="color:#f4b701" id="curTemp"></div>
    </div>      
    <div class="col-md-2 col-lg-2 col-sm-5">
      <div id="curCond"></div>
    </div> 
    <div class="col-md-2 col-lg-2">
      <span> Hi: 
        <span id="hiTemp"></span>
        <br>
        Low:
        <span id="loTemp"></span>    
      </span>
      <br>
    </div> 
  </div>  
</div>

<div class="row">
  <div class="col-md-4 col-lg-4 col-sm-4">      
      <!-- picked style -->
      <div>
        
        <h2>picked style</h2>
        <div id="selectedDress"></div>
        <div id="selectedTop"></div>
        <br>
        <div id="selectedBottom"></div> 
        <br>
        <div id="saveStyle"><%= f.submit "Save this style", class: "btn btn-info" %></div>                
      </div>
    </div>

<% end %>

  <!-- space btw two cols in Row -->
  <div class="col-md-1 col-lg-1"></div>
  
  <!-- suggested style below -->
  <div class="col-md-7 col-lg-7 col-sm-7" id="suggestedStyle">
    <h2>Suggested styles</h2>
    <span class="small">Click a outfit you like from below</span>
    <br>
    <div style="border-width: 1px; border-style: solid;">
      <div class="styleHeader text-center" style="border-width: 1px; border-style: solid;">Dresses</div>
      <div id="dress" style="border-width: 1px; border-style: solid;"></div>
    </div>
    <br>
    <div style="border-width: 1px; border-style: solid;">
      <div class="styleHeader text-center" style="border-width: 1px; border-style: solid;">Tops</div>
      <div id="top" style="border-width: 1px; border-style: solid;"></div>
    </div>
    <br>
    <div style="border-width: 1px; border-style: solid;">
      <div class="styleHeader text-center" style="border-width: 1px; border-style: solid;">Bottom</div>
      <div id="bottom" style="border-width: 1px; border-style: solid;"></div>
    </div>
    <br>
    <div style="border-width: 1px; border-style: solid;">
      <div class="styleHeader text-center" style="border-width: 1px; border-style: solid;">Accessories</div>
      <div id="accessory" style="border-width: 1px; border-style: solid;"></div>
    </div>    
  </div>

</div> <!-- end of weather row -->

<br><br>














